{
  "name": "@linch-kit/crud",
  "version": "0.1.0",
  "description": "Type-safe CRUD operations and state management for Linch Kit framework",
  "keywords": ["crud", "typescript", "react", "schema", "permissions", "linch-kit"],
  "license": "MIT",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "type-check": "tsc --noEmit",
    "lint": "eslint src",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "eventemitter3": "^5.0.1",
    "zod": "^3.22.0"
  },
  "peerDependencies": {
    "@linch-kit/schema": "workspace:*",
    "@linch-kit/auth": "workspace:*",
    "typescript": ">=5.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/linch-tech/linch-kit.git",
    "directory": "packages/crud"
  },
  "bugs": {
    "url": "https://github.com/linch-tech/linch-kit/issues"
  },
  "homepage": "https://linch.tech/docs/packages/crud"
}
