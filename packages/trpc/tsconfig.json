{
  "extends": "../../configs/tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "./src",
    "tsBuildInfoFile": ".tsbuildinfo",
    "jsx": "react-jsx"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.test.tsx",
    "**/*.spec.tsx"
  ]
}
