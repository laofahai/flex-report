{
  "name": "@linch-kit/trpc",
  "version": "0.1.0",
  "description": "Type-safe tRPC utilities and integrations for Linch Kit",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "vitest"
  },
  "keywords": [
    "trpc",
    "api",
    "type-safe",
    "rpc",
    "typescript",
    "react",
    "nextjs"
  ],
  "author": "Linch Kit Team",
  "license": "MIT",
  "dependencies": {
    "superjson": "^2.2.2",
    "@linch-kit/core": "workspace:*",
    "@linch-kit/types": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "@trpc/client": "^11.3.1",
    "@trpc/next": "^11.3.1",
    "@trpc/react-query": "^11.3.1",
    "@trpc/server": "^11.3.1",
    "@linch-kit/auth-core": "workspace:*",
    "@linch-kit/schema": "workspace:*",
    "next-auth": "^4.24.11",
    "next": "^15.3.3",
    "react": "^18.0.0",
    "@tanstack/react-query": "^5.0.0"
  },
  "peerDependenciesMeta": {
    "@linch-kit/auth-core": {
      "optional": true
    },
    "@linch-kit/schema": {
      "optional": true
    },
    "next": {
      "optional": true
    },
    "react": {
      "optional": true
    },
    "@tanstack/react-query": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
