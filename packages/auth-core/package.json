{
  "name": "@linch-kit/auth-core",
  "version": "0.1.0",
  "description": "Modular authentication and authorization system for Linch Kit",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "vitest"
  },
  "keywords": [
    "auth",
    "authentication",
    "authorization",
    "permissions",
    "rbac",
    "abac",
    "nextauth",
    "modular",
    "plugin"
  ],
  "author": "Linch Kit Team",
  "license": "MIT",
  "dependencies": {
    "next-auth": "^4.24.5",
    "zod": "^3.22.4",
    "commander": "^11.1.0",
    "@linch-kit/core": "workspace:*",
    "@linch-kit/types": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "@linch-kit/schema": "workspace:*",
    "@linch-kit/trpc": "workspace:*"
  },
  "peerDependenciesMeta": {
    "@linch-kit/schema": {
      "optional": true
    },
    "@linch-kit/trpc": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
