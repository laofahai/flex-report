{
  "name": "@linch-kit/core",
  "version": "0.1.0",
  "description": "AI-First core package for Linch Kit - includes CLI, configuration, and essential utilities",
  "keywords": [
    "linch-kit",
    "ai-first",
    "cli",
    "configuration",
    "core",
    "rapid-development",
    "framework"
  ],
  "author": "Linch Tech",
  "license": "MIT",
  "homepage": "https://github.com/linch-tech/linch-kit/tree/main/packages/core",
  "repository": {
    "type": "git",
    "url": "https://github.com/linch-tech/linch-kit.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/linch-tech/linch-kit/issues"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "bin": {
    "linch": "dist/cli.js",
    "linch-kit": "dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "AI-CONTEXT.md"
  ],
  "scripts": {
    "build": "tsup && npm run build:types",
    "build:types": "tsc --emitDeclarationOnly",
    "check-types": "tsc --noEmit",
    "test": "jest"
  },
  "dependencies": {
    "@godaddy/terminus": "^4.12.1",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.60.0",
    "@opentelemetry/exporter-jaeger": "^2.0.1",
    "@opentelemetry/exporter-prometheus": "^0.202.0",
    "@opentelemetry/instrumentation-express": "^0.51.0",
    "@opentelemetry/instrumentation-fs": "^0.22.0",
    "@opentelemetry/instrumentation-http": "^0.202.0",
    "@opentelemetry/resources": "^2.0.1",
    "@opentelemetry/semantic-conventions": "^1.34.0",
    "chalk": "^4.1.2",
    "commander": "^12.1.0",
    "cosmiconfig": "^9.0.0",
    "deepmerge": "^4.3.1",
    "dotenv": "^16.3.1",
    "glob": "^10.3.10",
    "inquirer": "^8.2.6",
    "js-yaml": "^4.1.0",
    "ora": "^5.4.1",
    "pino": "^9.7.0",
    "prom-client": "^15.1.3",
    "tinybench": "^4.0.1",
    "zod": "^3.25.64"
  },
  "devDependencies": {
    "@types/inquirer": "^8.2.10",
    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.0.3",
    "@types/pino": "^7.0.5",
    "jest": "^29.7.0",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "typescript": "5.8.3"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./cli": {
      "types": "./dist/cli/index.d.ts",
      "import": "./dist/cli/index.mjs",
      "require": "./dist/cli/index.js"
    },
    "./config": {
      "types": "./dist/config/index.d.ts",
      "import": "./dist/config/index.mjs",
      "require": "./dist/config/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.mjs",
      "require": "./dist/utils/index.js"
    },
    "./enterprise": {
      "types": "./dist/enterprise/index.d.ts",
      "import": "./dist/enterprise/index.mjs",
      "require": "./dist/enterprise/index.js"
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "ai-metadata": {
    "purpose": "Core package providing CLI, configuration, and essential utilities for Linch Kit",
    "architecture": "modular core with CLI, config, and utilities",
    "key-features": [
      "unified CLI system",
      "configuration management",
      "plugin system",
      "project scaffolding",
      "development tools",
      "enterprise logging",
      "metrics collection",
      "distributed tracing",
      "health monitoring",
      "performance benchmarking"
    ],
    "dependencies-explanation": {
      "zod": "schema validation and type safety",
      "commander": "CLI framework",
      "glob": "file pattern matching",
      "chalk": "terminal colors",
      "ora": "loading spinners",
      "inquirer": "interactive prompts",
      "cosmiconfig": "configuration file discovery",
      "deepmerge": "deep object merging",
      "dotenv": "environment variable loading",
      "js-yaml": "YAML file parsing"
    }
  }
}
