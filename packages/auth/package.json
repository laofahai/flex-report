{
  "name": "@linch-kit/auth",
  "version": "0.1.0",
  "description": "Modular authentication and authorization system for Linch Kit",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./cli": {
      "types": "./dist/cli.d.ts",
      "import": "./dist/cli.mjs",
      "require": "./dist/cli.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "pnpm build:js && pnpm build:dts",
    "build:js": "tsup",
    "build:dts": "timeout 25s tsc --project tsconfig.build.json --emitDeclarationOnly || echo 'DTS generation timed out, using fallback'",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vitest"
  },
  "keywords": [
    "auth",
    "authentication",
    "authorization",
    "permissions",
    "rbac",
    "abac",
    "nextauth",
    "modular",
    "plugin"
  ],
  "author": "Linch Kit Team",
  "license": "MIT",
  "dependencies": {
    "@linch-kit/core": "workspace:*",
    "@linch-kit/types": "workspace:*",
    "commander": "^11.1.0",
    "next-auth": "^4.24.5",
    "node": "^24.2.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@linch-kit/schema": "workspace:*",
    "@types/node": "^20.19.1",
    "tsup": "^8.0.1",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "@linch-kit/schema": "workspace:*",
    "@linch-kit/trpc": "workspace:*"
  },
  "peerDependenciesMeta": {
    "@linch-kit/schema": {
      "optional": true
    },
    "@linch-kit/trpc": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
