{
  "extends": "../../configs/tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "./src",
    "tsBuildInfoFile": ".tsbuildinfo",
    "paths": {
      "@linch-kit/ui/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.css"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.test.tsx",
    "**/*.spec.tsx"
  ]
}
