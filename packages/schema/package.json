{
  "name": "@linch-kit/schema",
  "version": "0.2.1",
  "description": "Type-safe schema definition library with unified field configuration and i18n support",
  "license": "MIT",
  "keywords": [
    "zod",
    "schema",
    "validation",
    "typescript",
    "i18n",
    "prisma",
    "orm",
    "database",
    "codegen",
    "defineField"
  ],
  "author": "Linch Tech",
  "homepage": "https://github.com/laofahai/linch-kit/tree/main/packages/schema",
  "repository": {
    "type": "git",
    "url": "https://github.com/laofahai/linch-kit.git",
    "directory": "packages/schema"
  },
  "bugs": {
    "url": "https://github.com/laofahai/linch-kit/issues"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "bin": {
    "linch-schema": "dist/cli/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "README.zh-CN.md",
    "examples"
  ],
  "scripts": {
    "build": "tsup",
    "generate:prisma": "tsx src/cli/index.ts generate:prisma",
    "generate:validators": "tsx src/cli/index.ts generate:validators",
    "generate:mocks": "tsx src/cli/index.ts generate:mocks",
    "generate:openapi": "tsx src/cli/index.ts generate:openapi",
    "generate:all": "tsx src/cli/index.ts generate:all",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "@linch-kit/core": "workspace:*",
    "commander": "^12.1.0",
    "fs": "0.0.1-security",
    "glob": "^10.3.10",
    "zod": "^3.25.64"
  },
  "devDependencies": {
    "@types/node": "^24.0.3",
    "tsup": "^8.5.0",
    "tsx": "^4.19.2",
    "typescript": "5.8.3"
  },
  "peerDependencies": {
    "@linch-kit/auth": "workspace:*"
  },
  "peerDependenciesMeta": {
    "@linch-kit/auth-core": {
      "optional": true
    }
  },

  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./generators": {
      "types": "./dist/generators.d.ts",
      "import": "./dist/generators.mjs",
      "require": "./dist/generators.js"
    },
    "./cli": {
      "types": "./dist/cli/index.d.ts",
      "import": "./dist/cli/index.mjs",
      "require": "./dist/cli/index.js"
    },
    "./cli-plugin": {
      "types": "./dist/plugins/cli-plugin.d.ts",
      "import": "./dist/plugins/cli-plugin.mjs",
      "require": "./dist/plugins/cli-plugin.js"
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
