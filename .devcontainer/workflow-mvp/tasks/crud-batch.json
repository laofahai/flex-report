{
  "workflow": {
    "id": "crud-batch-task",
    "description": "实现 CRUD 批量操作功能",
    "tasks": [
      {
        "id": "setup-branch",
        "type": "git",
        "command": "worktree add -b feature/crud/batch-operations ./worktrees/crud-batch main",
        "depends_on": []
      },
      {
        "id": "install-deps",
        "type": "shell",
        "command": "cd ./worktrees/crud-batch && bun install",
        "depends_on": ["setup-branch"]
      },
      {
        "id": "build-deps",
        "type": "shell",
        "command": "cd ./worktrees/crud-batch && bun run build --filter=@linchkit/core --filter=@linchkit/schema",
        "depends_on": ["install-deps"]
      },
      {
        "id": "run-tests",
        "type": "shell",
        "command": "cd ./worktrees/crud-batch && bun test --filter=@linchkit/crud",
        "depends_on": ["build-deps"]
      }
    ]
  }
}