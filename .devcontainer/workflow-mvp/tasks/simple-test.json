{
  "workflow": {
    "id": "simple-test-task",
    "description": "简单测试任务",
    "tasks": [
      {
        "id": "setup-branch",
        "type": "git",
        "command": "worktree add -b feature/test/simple ./worktrees/simple-test main",
        "depends_on": []
      },
      {
        "id": "install-deps",
        "type": "shell",
        "command": "cd ./worktrees/simple-test && bun install",
        "depends_on": ["setup-branch"]
      },
      {
        "id": "simple-check",
        "type": "shell",
        "command": "cd ./worktrees/simple-test && echo 'Simple check passed' && bun run --version",
        "depends_on": ["install-deps"]
      }
    ]
  }
}