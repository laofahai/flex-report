{
  "workflow": {
    "id": "user-table-test",
    "description": "创建用户管理的数据表格组件，支持增删改查",
    "tasks": [
      {
        "id": "setup-branch",
        "type": "git",
        "command": "worktree add -b feature/ui/user-table ./worktrees/user-table main",
        "depends_on": []
      },
      {
        "id": "install-deps",
        "type": "shell",
        "command": "cd ./worktrees/user-table && bun install",
        "depends_on": ["setup-branch"]
      },
      {
        "id": "build-ui-deps",
        "type": "shell",
        "command": "cd ./worktrees/user-table && bun run build --filter=@linchkit/ui",
        "depends_on": ["install-deps"]
      },
      {
        "id": "create-table-component",
        "type": "shell",
        "command": "cd ./worktrees/user-table && echo 'TODO: 创建用户表格组件'",
        "depends_on": ["build-ui-deps"]
      },
      {
        "id": "add-crud-actions",
        "type": "shell",
        "command": "cd ./worktrees/user-table && echo 'TODO: 添加增删改查操作'",
        "depends_on": ["create-table-component"]
      },
      {
        "id": "integrate-trpc",
        "type": "shell",
        "command": "cd ./worktrees/user-table && echo 'TODO: 集成 tRPC API'",
        "depends_on": ["add-crud-actions"]
      },
      {
        "id": "add-storybook",
        "type": "shell",
        "command": "cd ./worktrees/user-table && echo 'TODO: 添加 Storybook 文档'",
        "depends_on": ["integrate-trpc"]
      },
      {
        "id": "run-tests",
        "type": "shell",
        "command": "cd ./worktrees/user-table && bun test --filter=@linchkit/ui",
        "depends_on": ["add-storybook"]
      }
    ]
  }
}