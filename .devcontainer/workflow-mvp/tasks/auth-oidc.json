{
  "workflow": {
    "id": "auth-oidc-task",
    "description": "实现 OIDC 认证支持",
    "tasks": [
      {
        "id": "setup-branch",
        "type": "git",
        "command": "worktree add -b feature/auth/oidc-support ./worktrees/auth-oidc main",
        "depends_on": []
      },
      {
        "id": "install-deps",
        "type": "shell",
        "command": "cd ./worktrees/auth-oidc && bun install",
        "depends_on": ["setup-branch"]
      },
      {
        "id": "run-tests",
        "type": "shell",
        "command": "cd ./worktrees/auth-oidc && bun test --filter=@linchkit/auth",
        "depends_on": ["install-deps"]
      }
    ]
  }
}