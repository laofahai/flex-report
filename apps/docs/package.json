{
  "name": "@linch-kit/docs",
  "version": "1.0.0",
  "private": true,
  "description": "LinchKit Documentation Site",
  "scripts": {
    "build": "mkdir -p dist && cp -r public/* dist/ 2>/dev/null || cp index.html dist/",
    "build:docs": "npm run build",
    "dev": "python3 -m http.server 3000 --directory public 2>/dev/null || python -m SimpleHTTPServer 3000",
    "clean": "rm -rf dist"
  }
}