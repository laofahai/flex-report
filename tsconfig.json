{
  "compilerOptions": {
    "jsx": "preserve",
    "moduleResolution": "bundler",
    "module": "esnext",
    "target": "es2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "jsxImportSource": "react",
    "allowJs": true,
    "baseUrl": ".",
    "sourceMap": true,
    "paths": {
      "@flex-report/core": ["packages/core/src"],
      "@flex-report/ui": ["packages/ui/src"],
      "@flex-report/embed-react": ["packages/embed-react/src"],
      "@flex-report/embed-vue": ["packages/embed-vue/src"],
      "@flex-report/auth": ["packages/auth/src"],
      "@flex-report/ui/shadcn": ["packages/ui/src/components/ui/index.ts"],
      "@flex-report/ui/shadcn/*": ["packages/ui/src/components/ui/*"],
    }
  },
  "include": [
    "./packages/**/*.{ts,tsx,d.ts}",
    "./apps/**/*.{ts,tsx,d.ts}"
  ],
  "references": [
    { "path": "packages/core" },
    { "path": "packages/ui" },
    { "path": "packages/types" },
    { "path": "packages/embed-react" },
    { "path": "packages/auth" },
    { "path": "apps/web" },
    { "path": "apps/docs" }
  ]
}
