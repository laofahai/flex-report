{
  "compilerOptions": {
    "moduleResolution": "bundler",
    "module": "esnext",
    "target": "es2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "jsx": "preserve",
    "jsxImportSource": "react",
    "allowJs": true,
    "baseUrl": ".",
    "sourceMap": true,
    "paths": {
      "@linch-kit/core": ["packages/core/src"],
      "@linch-kit/ui": ["packages/ui/src"],
      "@linch-kit/auth-core": ["packages/auth-core/src"],
      "@linch-kit/schema": ["packages/schema/src"],
      "@linch-kit/trpc": ["packages/trpc/src"],
      "@linch-kit/ui/shadcn": ["packages/ui/src/components/ui/index.ts"],
      "@linch-kit/ui/shadcn/*": ["packages/ui/src/components/ui/*"]
    }
  },
  "include": [
    "./packages/**/*.{ts,tsx,d.ts}",
    "./apps/**/*.{ts,tsx,d.ts}"
  ],
  "references": [
    { "path": "packages/core" },
    { "path": "packages/ui" },
    { "path": "packages/types" },
    { "path": "packages/auth-core" },
    { "path": "packages/schema" },
    { "path": "packages/trpc" }
  ]
}
